{
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "singleAttributePerLine": true,
    "htmlWhitespaceSensitivity": "css",
    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-organize-imports"],
    "tailwindFunctions": ["clsx", "cn", "cva"],
    "tailwindStylesheet": "resources/css/app.css",
    "overrides": [
        {
            "files": "**/*.yml",
            "options": { "tabWidth": 2 }
        }
    ]
}